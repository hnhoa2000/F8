<div class="mt-4">
    <div class="row">
        <div class="col-sm-6 col-lg-4">
            {{#each courses}}
            <div class="card card-course-item">
                <img class="card-img-top" src="{{image}}" alt="image course {{name}}">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>