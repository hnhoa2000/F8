<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a href="/Courses/{{slug}}"><img class="card-img-top" src="{{image}}" alt="image course {{name}}"></a>
                <div class="card-body">
                    <a href="/Courses/{{slug}}"><h5 class="card-title">{{name}}</h5></a>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>