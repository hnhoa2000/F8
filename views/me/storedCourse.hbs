<div class="col">
    <div class="mt-4">
    <h3>Khóa học của tôi</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{name}}</td>
                <td>{{level}}</td>
                <td>{{createdAt}}</td>
                <td>
                    <a href="/Courses/{{_id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="/Courses/{{_id}}" class="btn btn-link">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
</div>